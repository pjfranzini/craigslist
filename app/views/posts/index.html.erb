<h1>Posts</h1>
<table>
  <tr>
    <td>Title</td>
    <td>Price</td>
    <td>Body</td>
    <td>Location</td>
    <td>Email</td>
    <td>Controls</td>
  </tr>
  <% @posts.each do |post| %>
    <tr>
      <td><%= post.title %></td>
      <td><%= number_to_currency(post.price) %></td>
      <td><%= post.body %></td>
      <td><%= post.location %></td>
      <td><%= post.email %></td>
      <td><%= link_to 'Show', post %></td>
    </tr>
  <% end %>
</table>
